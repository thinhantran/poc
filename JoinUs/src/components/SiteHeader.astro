---
import SearchEvents from './SearchEvents.vue';
import UserMenu from './UserMenu.vue';
---

<header class="header">
    <div class="logo-area">
        <a href="/" class="logo-link">
            <img src="/logo.png" alt="Logo" class="logo" />
        </a>
    </div>

    <SearchEvents client:load />
    <UserMenu client:load />
</header>


<style scoped>
    .header {
        position: sticky;
        top: 0;
        z-index: 1000;
        background: #f9cba7;
        padding: 1rem 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid #ddd;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        color: #5a2e00;
    }
    .logo-area {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .logo-link {
        text-decoration: none;
        color: inherit;
        display: flex;
        align-items: center;
    }
    .logo {
        width: 78px;
        height: 78px;
    }
    .site-title {
        font-size: 1.5rem;
        font-weight: bold;
    }
    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }
    .btn {
        padding: 0.5rem 1rem;
        background: #d35400;
        color: white;
        border: none;
        border-radius: 6px;
        text-decoration: none;
    }
</style>
